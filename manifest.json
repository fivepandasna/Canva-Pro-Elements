{
  "manifest_version": 2,
  "name": "Element Inspector",
  "version": "1.0",
  "description": "Inspect HTML by clicking on elements.",
  "permissions": ["activeTab", "tabs"],
  "browser_action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_title": "Inspect Element",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": ["styles.css"]
}
