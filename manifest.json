{
  "manifest_version": 3,
  "name": "Canva Image Downloader",
  "version": "1.0",
  "description": "Automatically download Canva elements when clicked.",
  "permissions": [
    "downloads",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.canva.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.canva.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
