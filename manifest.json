{
  "manifest_version": 3,
  "name": "Canva Image Downloader",
  "version": "1.1",
  "description": "Click on elements in Canva to download them.",
  "permissions": [
    "downloads",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.canva.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "Enable Canva Downloader"
  },
  "icons": {
    "48": "icon.png"
  }
}
